@model IEnumerable<MVC_OgrenciKayit.Models.Table>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Tables/Index.cshtml";
}

<h2>ÖĞRENCİ LİSTESİ</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ogr_ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ogr_soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ogr_mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ogr_adres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ogr_ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ogr_soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ogr_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ogr_adres)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ogr_id }, new {@class="btn btn-success" })    
            @Html.ActionLink("Detay", "Details", new { id=item.ogr_id }, new { @class="btn btn-primary"})   
            @Html.ActionLink("Sil", "Delete", new { id=item.ogr_id }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
